%div.container-fluid.home
  %div.row-fluid
    %form.search.pull-left{ :action => '/lookup', :method => 'get'}
      %div.input-append
        %input{:type => 'text', :name => 'postcode', :class => 'text', :value => ''}
        %input.btn{:type => 'submit', :value => 'Search'}
  %div.row-fluid
    %div.span6
      %table.table.table-striped
        %tbody
          - @recent_stops.each do |stop|
            %tr
              %td
                %a{:href => "/times/#{stop.stop_id}/now"} #{stop.stop_name}
              %td
                %a{:href => "/remove/#{stop.stop_id}"} x
